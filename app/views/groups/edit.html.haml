.chat-group-form
  %h1 チャットグループ編集
  = form_for @group, html: {id: 'edit_chat_group', class: 'edit_chat_group'}, action: :update do |f|
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label 'グループ名', class: 'chat-group-form__label', for: 'chat_group_name'
      .chat-group-form__field--right
        = f.text_field :name, class: 'chat-group-form__input', id: 'chat_group_name', placeholder: 'グループ名を入力してください'
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label 'チャットメンバーを追加', class: 'chat-group-form__label', for: 'chat_group_チャットメンバー'
      .chat-group-form__field--right
        #chat-group-users
          %input.chat-group-form__input.chat-group-search-form(type='text' placeholder='ユーザ名を入力して下さい' id='user-name')
        #chat-group-users-search
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label 'チャットメンバー', class: 'chat-group-form__label'
      .chat-group-form__field--right
        #chat-group-form__field--right-users
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit 'Save', class: 'chat-group-form__action-btn'
