.menu
  .menu__user
    .menu__user__name
      = current_user.name
      .menu__user__name__icons
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o
        = link_to edit_user_registration_path(current_user) do
          %i.fa.fa-cog
  .menu__groups
    - current_user.groups.each do |group|
      = link_to new_group_message_path(group) do
        .menu__groups__group
          .menu__groups__group__name
            = group.name
          .menu__groups__group__info
            新着メッセージはありません
